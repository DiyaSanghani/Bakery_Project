﻿@using System.Data;
@using Bakery_Project.Areas.Cart.Models;
@model Bakery_Project.Areas.Cart.Models.CartModel;
@using Bakery_Project.Areas.Product.Models;
@{
    string opration = "";
    if (ViewBag.ID > 0)
    {
        opration = "Edit";
    }
    else
    {
        opration = "Add";
    }
}


<div class="row ">
    <div class="col-lg-8 align-items-center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@opration Record</h5>
                <!-- Multi Columns Form -->
                <form class="row g-3" asp-action="AddEditCartData" method="post">
                    @Html.HiddenFor(x => x.CartID)
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Cart Number</label>
                        <input asp-for="CartNumber" type="text" class="form-control">
                        <span asp-validation-for="CartNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputProduct" class="form-label">ProductID</label>
                        <select asp-for="ProductID" asp-items="@(new SelectList(ViewBag.ProductDropdownModel,"ProductID","ProductName"))" id="inputProduct" class="form-select">
                            <option>Select Product---</option>
                        </select>
                        <span asp-validation-for="ProductID" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label for="inputUser" class="form-label">UserID</label>
                        <select asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserDropdownModel,"UserID","UserName"))" id="inputUser" class="form-select">
                            <option>Select User---</option>
                        </select>
                        <span asp-validation-for="UserID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputName5" class="form-label">TotalAmount</label>
                        <input asp-for="TotalAmount" type="text" class="form-control">
                        <span asp-validation-for="TotalAmount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputPrice" class="form-label">CartQuantity</label>
                        <input asp-for="CartQuantity" type="text" class="form-control">
                        <span asp-validation-for="CartQuantity" class="text-danger"></span>
                    </div>

                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">@opration Record</button>
                        <button asp-action="Cancel" asp-area="Cart" asp-controller="Cart" class="btn btn-primary">Cancel</button>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>
    </div>
</div>