﻿@using System.Data;
@using Bakery_Project.Areas.OrderDetail.Models;
@model Bakery_Project.Areas.OrderDetail.Models.OrderDetailModel;
@using Bakery_Project.Areas.Cart.Models;
@{
    string opration = "";
    if (ViewBag.ID > 0)
    {
        opration = "Edit";
    }
    else
    {
        opration = "Add";
    }
}


<div class="row ">
    <div class="col-lg-8 align-items-center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@opration Record</h5>
                <!-- Multi Columns Form -->
                <form class="row g-3" asp-action="AddEditOrderDetailsData" method="post">
                    @Html.HiddenFor(x => x.OrderID)
                    <div class="col-md-6">
                        <label for="inputCartID" class="form-label">CartID</label>
                        <select asp-for="CartID" asp-items="@(new SelectList(ViewBag.CartDropdownModel,"CartID","CartNumber"))" id="inputCartID" class="form-select">
                            <option>Select Cart---</option>
                        </select>
                        <span asp-validation-for="CartID" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">OrderItemName</label>
                        <input asp-for="OrderItemName" type="text" class="form-control">
                        <span asp-validation-for="OrderItemName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputName5" class="form-label">OrderQuantity</label>
                        <input asp-for="OrderQuantity" type="text" class="form-control">
                        <span asp-validation-for="OrderQuantity" class="text-danger"></span>
                    </div>
                    
                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">@opration Record</button>
                        <button asp-action="Cancel" asp-area="OrderDetail" asp-controller="OrderDetail" class="btn btn-primary">Cancel</button>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>
    </div>
</div>