﻿@using System.Data;
@using Bakery_Project.Areas.Category.Models;
@model Bakery_Project.Areas.Category.Models.CategoryModel;
@{
    string opration = "";
    if (ViewBag.ID > 0)
    {
        opration = "Edit";
    }
    else
    {
        opration = "Add";
    }
}


<div class="row ">
    <div class="col-lg-8 align-items-center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@opration Record</h5>
                <!-- Multi Columns Form -->
                <form class="row g-3" asp-action="AddEditCategoriesData" method="post">
                    @Html.HiddenFor(x => x.CategoryID)
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Category Name</label>
                        <input asp-for="CategoryName" type="text" class="form-control">
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>
                    

                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">@opration Record</button>
                        <button asp-action="Cancel" asp-area="Category" asp-controller="Category" class="btn btn-primary">Cancel</button>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>
    </div>
</div>