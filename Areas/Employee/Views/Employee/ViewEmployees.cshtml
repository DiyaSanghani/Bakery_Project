@using System.Data

@if (TempData["Message"] != null)
{
    <div class="Message" style="border-radius: 5px; border-block-color: darkgreen; text-align: center; border:dashed; background-color:palegreen; background-blend-mode:lighten ">
        <p>@TempData["Message"]</p>
    </div>
}

<div class="row">
    <div class="row">
        <div class="col-md-12 bg-light text-end mb-3">
            <a asp-action="AddEditEmployees" asp-area="Employee" asp-controller="Employee"><button type="button" class="btn btn-success align-right"><i class="bi bi-plus-lg"></i> Add Employee</button></a>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Employee Table</h5>
            <!-- Default Table -->
            @if (ViewBag.Employee != "NULL")
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">EmployeeID</th>
                            <th scope="col">EmployeeName</th>
                            <th scope="col">JoiningDate</th>
                            <th scope="col">IsActive</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow data in Model.Rows)
                        {
                            <tr>
                                <th scope="row">@data["EmployeeID"]</th>
                                <td>@data["EmployeeName"]</td>
                                <td>@data["JoiningDate"]</td>
                                <td>@data["IsActive"]</td>


                        <td>
                        <a asp-action="EditEmployees" asp-route-EmployeeID="@Convert.ToInt32(@data["EmployeeID"])" class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a asp-action="DeleteEmployees" asp-route-EmployeeID="@Convert.ToInt32(@data["EmployeeID"])" class="btn btn-danger btn-sm" ><i class="bi bi-trash"></i></a>
                        </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <h3>No Record Found</h3>
            }
            <!-- End Default Table Example -->
        </div>
    </div>
</div>