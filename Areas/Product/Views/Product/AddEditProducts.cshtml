﻿@using System.Data;
@using Bakery_Project.Areas.Product.Models;
@model Bakery_Project.Areas.Product.Models.ProductModel;
@using Bakery_Project.Areas.Flavour.Models;
@{
    string opration = "";
    if (ViewBag.ID > 0)
    {
        opration = "Edit";
    }
    else
    {
        opration = "Add";
    }
}


<div class="row ">
    <div class="col-lg-8 align-items-center">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@opration Record</h5>
                <!-- Multi Columns Form -->
                <form class="row g-3" asp-action="AddEditProductsData" method="post">
                    @Html.HiddenFor(x => x.ProductID)
                    <div class="col-md-12">
                        <label for="inputName5" class="form-label">Product Name</label>
                        <input asp-for="ProductName" type="text" class="form-control">
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputName5" class="form-label">CategoryID</label>
                        <input asp-for="CategoryID" type="text" class="form-control">
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputFlavour" class="form-label">Flavour</label>
                        <select asp-for="FlavourID" asp-items="@(new SelectList(ViewBag.FlavourDropdownModel,"FlavourID","FlavourName"))" id="inputFlavour" class="form-select">
                            <option>Select Flavour---</option>
                        </select>
                        <span asp-validation-for="FlavourID" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputPrice" class="form-label">Price</label>
                        <input asp-for="Price" type="text" class="form-control">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label for="inputProductDescription" class="form-label">Product Description</label>
                        <input asp-for="ProductDescription" type="text" class="form-control">
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </div>

                    <div class="text-left">
                        <button type="submit" class="btn btn-primary">@opration Record</button>
                        <button asp-action="Cancel" asp-area="Product" asp-controller="Product" class="btn btn-primary">Cancel</button>
                    </div>
                </form><!-- End Multi Columns Form -->
            </div>
        </div>
    </div>
</div>